@page
@model SupplyBlockChain_Backend.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center" style="font-family:'Comic Sans MS';">Log In</h1>
<hr />
<br />
<br />
<form method="post">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-4 col-md-offset-4 text-danger"></div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-4 col-md-offset-4 form-group">
            <label asp-for="LoginInput.UserName">Username:</label>
            <input type="text" class="form-control" asp-for="LoginInput.UserName" />
            <span asp-validation-for="LoginInput.UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-4 col-md-offset-4 form-group">
            <label asp-for="LoginInput.Password">Password:</label>
            <input type="password" class="form-control" asp-for="LoginInput.Password" />
            <span asp-validation-for="LoginInput.Password" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">

            <input type="submit" class="btn " value="Login" style="background-color:#34495e;color:#FFFFFF;" />

        </div>
    </div>
    <br />
    <br />
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">

            <h5>Don't have an account? <a class="btn btn-sm" style="background-color:#34495e;color:#FFFFFF;" asp-page="/SignUp">Sign Up</a> here.</h5>

        </div>
    </div>

</form>
<br />
<br />

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}